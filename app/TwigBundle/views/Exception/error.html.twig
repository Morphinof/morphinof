{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    %}
        <link rel="stylesheet" type="text/css" charset="utf-8" media="all" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block additional_css %}
{% endblock %}

{% set isAuth = is_granted('IS_AUTHENTICATED_FULLY') %}

{% block bodyContent %}
    {% set exception = app.request.attributes.get('exception') %}

    <div class="container-fluid p-50">
        {% if exception is not null %}
        <div class="t-a-c">
            <h1>Erreur {{ exception.statusCode }}</h1>
            <p>{{ exception.message }}</p>
        </div>
        {% endif %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block additional_js %}{% endblock %}
