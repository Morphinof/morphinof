{% block modals %}
    <div class="modal inmodal" id="alert-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content animated bounceInRight">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <i class="fa fa-laptop modal-icon"></i>
                    <h4 class="modal-title"></h4>
                    <small class="font-bold">Formulaire d'inscription.</small>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" id="alert-modal-close" class="btn btn-white" data-dismiss="modal">Fermer</button>
                    <button type="button" id="alert-modal-confirm" class="btn btn-primary" data-dismiss="modal">Ok</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block navbar %}
{% endblock %}

