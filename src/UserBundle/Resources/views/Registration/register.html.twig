    <script>
        //CKEDITOR.removeAllListeners();
        //CKEDITOR.on('loaded', function() {});
        $(document).ready(function() {
            $("#subscribe-form").steps({
                /* Appearance */
                headerTag: "h1",
                bodyTag: "fieldset",
                transitionEffect: "slideLeft",
                stepsOrientation: "vertical",
                onFinished: function (event, currentIndex) {
                    $('#subscribe-form').submit();
                },
                onCanceled: function (event, currentIndex) {
                    var modal = $('#alert-modal');

                    modal.find('.modal-title').html('Annulation');
                    modal.find('.modal-body').html('Voulez vous vraiment vider le formulaire d\'inscription ?');
                    modal.find('#alert-modal-confirm').on('click', function () {
                        $('#subscribe-form').find('input').val('');
                    });
                    modal.modal();
                },
                /* Labels */
                labels: {
                    cancel: "Annuler",
                    current: "Etape courante:",
                    pagination: "Pagination",
                    finish: "Terminer",
                    next: "Suivant",
                    previous: "Précédant",
                    loading: "Chargement ..."
                }
            });

            $('textarea').froalaEditor();
        });
    </script>
