            {% endblock fos_user_content %}

            <a class="btn btn-primary btn-sm" href="{{ path('fos_user_security_login') }}">Vous avez déjà un compte ? Connectez-vous</a>

            <p class="m-t">
                <small>Morphinof - Inspinia &copy; {{ 'now' | date('Y') }}</small>
            </p>
        </div>
    </div>
{% endblock %}

