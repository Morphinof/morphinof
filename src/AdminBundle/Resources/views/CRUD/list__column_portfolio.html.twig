{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% set portfolio = get_project_portfolio(object) %}

    {% if object is defined and portfolio is not null %}
        <a class="label label-primary" href="{{ path('admin_resume_portfolio_edit', {'id': portfolio.id}) }}">
            Portfolio {{ portfolio.id }}
        </a>
    {% else %}
        <span class="label label-default">Pas de portfolio</span>
    {% endif %}
{% endblock %}