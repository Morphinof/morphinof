{% extends 'SonataAdminBundle:CRUD:base_list_field.html.twig' %}

{% block field %}
    {% if object is defined and object.glyph is not null %}
        <div style="text-align: center;">
            <i class="fa fa-{{ object.glyph }} fa-2x" aria-hidden="true"></i>
        </div>
    {% endif %}
{% endblock %}