{% if user is defined and user.profile.skills | length > 0 %}
<!-- SKILLS -->
<section class="section skills" id="skills">
    <div class="container">
        <h2 class="heading sr-only">Comp√©tances</h2>
        <div class="row">
            {% for skill in user.profile.skills %}
            <div class="col-md-4">
                <div class="skill-chart">
                    <div class="pie-chart" id="chart1" data-percent="{{ skill.level * 100 }}">
                        <span class="percent">{{ skill.level * 100 }}%</span>
                    </div>
                    <span class="chart-title">{{ skill.tag.name }}</span>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
<!-- END SKILLS -->
{% endif %}
