{% extends "ResumeBundle::numo.html.twig" %}

{% set title = 'Articles de blog - Auteur : ' ~ app.user.username | default('Inconnu') %}

{% block title %}
  {{ parent() }} - {{ title }}
{% endblock %}

{% block stylesheets %}
  {{ parent() }}

  {% stylesheets
  %}
    <link rel="stylesheet" type="text/css" charset="utf-8" media="all" href="{{ asset_url }}" />
  {% endstylesheets %}

  <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,300italic,400italic,600,600italic,700' rel='stylesheet' type='text/css'>
{% endblock %}

{% block content %}
  {% include 'ResumeBundle:Numo/partials/blog:nav-bar.html.twig' %}

  {% include 'ResumeBundle:Numo/partials/blog:intro.html.twig' %}

  {% include 'ResumeBundle:Numo/partials/blog:articles.html.twig' %}

  {% include 'ResumeBundle:Numo/partials/blog:footer.html.twig' %}

  {% include 'ResumeBundle:Numo/partials/blog:footer-bottom.html.twig' %}
{% endblock %}

{% block javascripts %}
  {{ parent() }}

  {% javascripts
  %}
    <script src="{{ asset_url }}"></script>
  {% endjavascripts %}

  <script>
    $(window).scroll(function () {
      if ($(document).scrollTop() < 120) {
        $('.navbar').removeClass('tiny');
      } else {
        $('.navbar').addClass('tiny');
      }
    });

    $(document).ready(function() {
      $('.lightbox').magnificPopup({type:'image'});
    });
  </script>
{% endblock %}