{% extends "ResumeBundle::three-color.html.twig" %}

{% set title = 'Voici mon CV :)' %}

{% block title %}
    {{ parent() }} - {{ title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    %}
        <link rel="stylesheet" type="text/css" charset="utf-8" media="all" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-xs-12">
            <div id="photo-header" class="text-center">
                <!-- PHOTO (AVATAR) -->
                <div id="photo">
                    <img src="{{ asset('bundles/resume/img/avatar.jpg') }}" alt="avatar">
                </div>
                <div id="text-header">
                    <h1>
                        Hello,<br> my name is <span>{{ user.profile.firstName | default('John') ~ ' ' ~ user.profile.lastName | default('Doe') }}</span>
                        <sup>{{ user.profile.birthDate | default(date('NOW')) | age }}yo</sup> and this is my resume/cv
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 col-sm-7">
            <!-- ABOUT ME -->
            <div class="box">
                <h2>A propos de moi</h2>
                {% set loremIpsum = 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Repellendus, non, dolorem, cumque distinctio magni quam expedita velit laborum sunt amet facere tempora ut fuga aliquam ad asperiores voluptatem dolorum! Quasi.' %}
                <p>
                    {{ user.profile.about | default(loremIpsum) | raw }}
                </p>
            </div>

            {% include '@Resume/ThreeColor/partials/educations.html.twig' %}

            {% include '@Resume/ThreeColor/partials/experiences.html.twig' %}
        </div>
        <div class="col-xs-12 col-sm-5">
            {% include '@Resume/ThreeColor/partials/contact.html.twig' %}

            {% include '@Resume/ThreeColor/partials/skills.html.twig' %}

            {% include '@Resume/ThreeColor/partials/languages.html.twig' %}

            {% include '@Resume/ThreeColor/partials/hobbies.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
    </script>
{% endblock %}