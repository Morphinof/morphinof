{% if user is defined %}
    {% if user.profile.hobbies | length > 0 %}
        <!-- HOBBIES -->
        <div class="box">
            <h2>Hobbies</h2>
            {% for hobbie in user.profile.hobbies %}
                <div class="hobby">{{ hobbie.tag.name }}</div>
            {% endfor %}
        </div>
    {% endif %}
{% endif %}